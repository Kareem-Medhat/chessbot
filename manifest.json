{
	"manifest_version": 3,
	"name": "Chessbot",
  "description": "Don't play chess",
	"version": "0.0.1",
	"action": {
    "default_title": "Toggle bot"
  },
	"background": {
		"service_worker": "dist/background.js"
	},
  "content_scripts": [
    {
      "js": ["dist/content.js"],
      "matches": ["https://www.chess.com/play/computer", "https://www.chess.com/play/online", "https://www.chess.com/game/live/*"]
    }
  ],
  "permissions": ["nativeMessaging", "storage"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B"
      }
    }
  }
}
